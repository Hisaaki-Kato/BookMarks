<div class="container">
  <section class="user_info">
    <h1>
      <%= @user.name %>
    </h1>
    <p>メモの数</p>
    <p>いいねの数</p>
    <p>フォロー</p>
    <p>フォロワー</p>
  </section>
</div>
<div class="row">
  <li class="col-md-3"><a href="#">プロフィール</a></li>
  <li class="col-md-3"><a href="#">読んだ本</a></li>
