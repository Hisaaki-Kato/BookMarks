<% provide(:title, "Mypage") %>
<div class="container">
  <section class="user_info">
    <h1>
      <%= @user.name %>
    </h1>
    <p>メモの数 (<%= @user.microposts.count %>)</p>
    <p>ボードの数 (<%= @user.boards.count %>)</p>
    <p>いいねの数</p>
    <section class="follow_stats">
      <%= render 'shared/follow_stats' %>
    </section>
  </section>
</div>
<div class="row">
  <ul class="col-md-2"><a href="#profile">プロフィール</a></ul>
  <ul class="col-md-2"><a href="#books">読んだ本</a></ul>
  <ul class="col-md-2"><a href="#memos">メモ</a></ul>
  <ul class="col-md-2"><a href="#likes">いいねしたメモ</a></ul>
  <ul class="col-md-2"><a href="#boards">ボード</a></ul>
  <ul class="col-md-2"><a href="#timeline">タイムライン</a></ul>
</div>

<div id="profile">
  <h3>自己紹介文</h3>
  <% if not @user.profile.blank? %>
    <%= @user.profile %>
  <% else %>
    <p>自己紹介文は登録されていません。</p>
  <% end %>
  <%= link_to "自己紹介文を変更する", edit_user_path %>
</div>

<div id="books">
  <% if @read_books.present? %>
    <h3>Books (<%= @read_books.count %>)</h3>
    <ol class="books">
      <%= render @read_books %>
    </ol>
  <% else %>
    <p>本棚に追加した本はありません。</p>
  <% end %>
  <%= link_to "新しい本を追加する", new_book_path %>
</div>

<div id="memos">
  <div class="col-md-12">
    <% if @user.microposts.present? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>

<div id="likes"">
  <div class="col-md-12">
    <% if @like_microposts.present? %>
      <h3>Favorites (<%= @like_microposts.count %>)</h3>
      <ol class="like-microposts">
        <%= render @like_microposts %>
      </ol>
    <% else %>
      <p>いいねしたメモはありません。</p>
    <% end %>
  </div>
</div>

<div id="boards">
  <div class="col-md-12">
    <% if @user.boards.present? %>
      <h3>Boards (<%= @user.boards.count %>)</h3>
      <ol class="boards">
        <%= render @boards %>
      </ol>
    <% end %>
  </div>
</div>

<div id="timeline">
  <h3>Micropost Feed</h3>
  <%= render 'shared/feed' %>
</div>