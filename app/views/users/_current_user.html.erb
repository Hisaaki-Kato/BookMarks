<% provide(:title, "Mypage") %>
<div class="container">
  <section class="user_info">
    <h1>
      <%= @user.name %>
    </h1>
    <p>メモの数 (<%= @user.microposts.count %>)</p>
    <p>ボードの数 (<%= @user.boards.count %>)</p>
    <p>いいねの数</p>
    <section class="follow_stats">
      <%= render 'shared/follow_stats' %>
    </section>
  </section>
</div>
<div class="row">
  <ul class="col-md-2"><a href="#profile">プロフィール</a></ul>
  <ul class="col-md-2"><a href="#books">読んだ本</a></ul>
  <ul class="col-md-2"><a href="#memos">メモ</a></ul>
  <ul class="col-md-2"><a href="#boards">ボード</a></ul>
  <ul class="col-md-2"><a href="#timeline">タイムライン</a></ul>
</div>

<div id="profile">
  <h3>自己紹介文</h3>
  <% if not @user.profile.blank? %>
    <%= @user.profile %>
  <% else %>
    <p>自己紹介文は登録されていません。</p>
  <% end %>
  <%= link_to "自己紹介文を変更する", edit_user_path %>
</div>

<div id="books">
  <p>読んだ本</p>
</div>

<div id="memos">
  <section class="micropost_form">
    <%= render 'shared/micropost_form' %>
  </section>

  <div class="col-md-12">
    <% if @user.microposts.present? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>

<div id="boards">
  <section class="board_form">
    <%= render 'shared/board_form' %>
  </section>

  <div class="col-md-12">
    <% if @user.boards.present? %>
      <h3>Boards (<%= @user.boards.count %>)</h3>
      <ol class="boards">
        <%= render @boards %>
      </ol>
    <% end %>
  </div>
</div>

<div id="timeline">
  <h3>Micropost Feed</h3>
  <%= render 'shared/feed' %>
</div>