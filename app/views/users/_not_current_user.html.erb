<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <section class="name_picture">
        <%= render "users/user_info", user: @user %>
      </section>
      <section class="follow_stats">
        <%= render 'shared/follow_stats' %>
      </section>
      <p><%= @user.profile %></p>
      <%= render 'follow_form' if logged_in? %>
    </section>
  </aside>
  
  <%# micropost %>
  <div class="col-md-8">
    <h3>学びメモ</h3>
    <% if @user.microposts.any? %>
      <%= will_paginate @microposts %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% else %>
      <p>学びメモはまだありません。</p>
    <% end %>
  </div>
</div>