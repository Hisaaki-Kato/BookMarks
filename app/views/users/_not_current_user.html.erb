<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <section class="name-picture">
        <%= render "users/user_info", user: @user %>
      </section>
      <section class="follow_stats">
        <%= render 'shared/follow_stats' %>
      </section>
      <p><%= @user.profile %></p>
      <%= render 'follow_form' if logged_in? %>
    </section>
  </aside>
  
  <%# micropost %>
  <div class="col-md-8">
    <div id="not-current-user-memos"></div>
      <h3><span>学びメモ</span></h3>
      <% if @user.microposts.any? %>
        <%= paginate @microposts %>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= paginate @microposts %>
      <% else %>
        <p>学びメモはまだありません。</p>
      <% end %>
    </div>
  </div>
</div>