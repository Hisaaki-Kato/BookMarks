<% provide(:title, 'HOME') %>
<%= render 'microposts/slider' %>
<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <section class="popular-books">
        <h1><img id="ranking-logo" src="/ranking.png">人気の書籍ランキング</h1>
        <%= render @popular_books %>
        <p id="search-other-books"><%= link_to "他の本を探す", new_book_path %></p>
      </section>
    </aside>

    <div class="col-md-8">
      <% if !@recommended_books.nil? %>
        <h1>あなたにおすすめの書籍があります！</h1>
        <%= render "books/result", books: @recommended_books %>
      <% end %>

      <h1>最新の投稿</h1>

      <%= paginate @microposts %>
      <ul class="microposts">
        <%= render @microposts %>
      </ul>

      <%= paginate @microposts %>
    </div>
  </div>
</div>