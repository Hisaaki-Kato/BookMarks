<li id="micropost-<%= micropost.id %>">
  <div class="row">
    <div class="col-md-9">
      <span class="user">
        <%= link_to micropost.user do %>
          <%= render "users/user_info", user: micropost.user %>
        <% end %>
      </span>
      
      <%= link_to micropost do %>
        <div class="micropost-content">
          <p class="quoted_text">"<%= micropost.quoted_text %>"</p>
          <p class="content"><%= micropost.content %></p>
          <p class="timestamp">
            Posted <%= time_ago_in_words(micropost.created_at) %> ago.
          </p>
        </div>

        <span class="like-stats">
          <span><img src="/comments.png" class="comments-logo">:</span>
          <span id="comments_<%= micropost.id %>"><%= micropost.comments.count %></span>
          <span><img src="/likes.png" class="likes-logo">:</span>
          <span id="likes_<%= micropost.id %>"><%= micropost.likes.count %></span>
        </span>
      <% end %>
      
      <% if logged_in? %>
        <%= render "microposts/like_form", micropost: micropost %>
        <% if current_user?(micropost.user) %>
          <%= link_to micropost, method: :delete,
                                 data: { confirm: "You sure?" } do %>
            <span class="delete-link"><img src="/trash.png">メモを削除する</span>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <div class="col-md-3">
      <%# books/showページでは表示しない %>
      <% if @book.blank? %>
        <%= link_to micropost.book do %>
          <img class="book-img in-microposts" src="<%= micropost.book.image %>">
          <p><%= micropost.book.title %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</li>