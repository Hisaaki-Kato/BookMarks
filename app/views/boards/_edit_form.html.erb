<%= form_for(@board, url: yield(:url)) do |f| %>
  <%= render 'shared/error_messages', object: @board %>

  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title, value: "#{@board.title}" %>
  <%= f.text_area :content, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>