<div class="jumbotron">
  <li id="board-<%= board.id %>">
    <%# <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <span class="user"><%= link_to board.user.name, board.user %></span>
    <span class="content"><%= board.content %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(board.created_at) %> ago.
    </span>
    <% if current_user?(board.user) %>
      <%= link_to "delete", board, method: :delete,
                                       data: { confirm: "You sure?" } %>
      <%= link_to "編集", edit_board_path(board) %>
    <% end %>
  </li>
</div>