<div class="book">
  <%= link_to book do %>
    <div>
      <img class="book-img" src="<%= book.image %>">
    </div>
    <p class="book-title"><%= book.title %></p>
  <% end %>

  <% if logged_in? %>
    <%= render "books/read_form", book: book %>
    <% if current_user.admin? %>
      <%= link_to "delete", book, method: :delete,
                                  data: { confirm: "You sure?" }%>
    <% end %>
  <% end %>
</div>